<Window x:Class="BuildSys.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:BuildSys"
    xmlns:viewModels="clr-namespace:BuildSys.ViewModels"
    mc:Ignorable="d"
    Title="BuildSys"
    Height="600"
    Width="525">

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Customers">
                <MenuItem Header="_Register Customer" Command="{Binding goToRegCustomer}"/>
                <MenuItem Header="_Manage Exisiting Customers" Command="{Binding goToListCustomer}"/>
            </MenuItem>
            <MenuItem Header="_Materials">
                <MenuItem Header="_Create Materials" Command="{Binding goToRegMaterial}"/>
                <MenuItem Header="_Manage Existing Materials"/>
            </MenuItem>
            <MenuItem Header="_Quotes">
                <MenuItem Header="_Generate a Quote"/>
                <MenuItem Header="_Manage Existing Quotes"/>
            </MenuItem>
            <MenuItem Header="_Reports">
                <MenuItem Header="_Customer Reports"/>
                <MenuItem Header="_Quote Reports"/>
                <MenuItem Header="_Material Reports"/>
            </MenuItem>
        </Menu>
        <StackPanel></StackPanel>

        <ContentControl Content="{Binding ViewModel}" />
    </DockPanel>

</Window>