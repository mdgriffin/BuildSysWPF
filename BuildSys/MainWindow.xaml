<Window x:Class="BuildSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildSys"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Name="frmReg">
        <WrapPanel>
            <Label Name="lblFirstName" Content="First Name" />
            <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" Name="txtFirstName"/>
        </WrapPanel>
        <WrapPanel>
            <Label Name="lblSurname" Content="Surname" />
            <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" Name="txtSurname"/>
        </WrapPanel>
        <WrapPanel>
            <Label Name="lblStreet" Content="Street" />
            <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" Name="txtStreet"/>
        </WrapPanel>
        <Button Name="btnReg" Click="btnReg_Click" ToolTip="Example Button">Register</Button>
    </StackPanel>
</Window>
